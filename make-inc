CC = gcc
CC = clang-12

CCOPT = -std=gnu99 \
	-DDEBUG=0 \
	-g \
	-Wall \
	-Wextra \
	-Wformat \
	-O0

CCOPT = -std=gnu99 \
	-ftree-vectorize \
	-mavx2 \
	-O2 \

LIBS = -lm
